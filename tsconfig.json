{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "module": "preserve",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "baseUrl": ".",
    "types": [
      "expo",
      "react",
      "react-native",
      "node"
    ],
    "lib": [
      "ES2015",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "types/deno-globals.d.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "utils/notifications.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "supabase/functions/**"
  ]
}
